{
	"suggest.echodocSupport": true,
	"suggest.snippetIndicator": "[+] ",
	"snippets.priority": 100,
	"diagnostic.enable": true,
	"diagnostic.displayByAle": false,
	"diagnostic.refreshOnInsertMode": true,

	"coc.preferences.formatOnSaveFiletypes": ["rust", "python"],
	"rust-analyzer.checkOnSave.enable": true,
	"rust-analyzer.checkOnSave.command": "clippy",
	"rust-analyzer.serverPath": "~/.cargo/bin/rust-analyzer",

	"python.linting.pylintEnabled": false,
	"python.linting.flake8Enabled": false,
	"python.linting.mypyEnabled": true,
	"python.linting.enabled": true,
	"python.pythonPath": "~/.pyenv/versions/neovim3/bin/python",
	"python.formatting.provider": "yapf",
	"python.jediEnabled": false,

	"diagnostic-languageserver.filetypes": {
		"vim": "vint",
		"email": "languagetool",
		"markdown": ["write-good", "markdownlint"],
		"sh": "shellcheck",
		"tex": ["write-good"]
	},
	"diagnostic-languageserver.formatFiletypes": {
		"sh": "shfmt",
		"fish": "fish_indent"
	},
	"diagnostic-languageserver.linters": {
		"languagetool": {
			"command": "languagetool",
			"debounce": 200,
			"args": ["--language", "en-US", "-"],
			"offsetLine": 0,
			"offsetColumn": 0,
			"sourceName": "languagetool",
			"formatLines": 2,
			"formatPattern": [
				"^\\d+?\\.\\)\\s+Line\\s+(\\d+),\\s+column\\s+(\\d+),\\s+([^\\n]+)\nMessage:\\s+(.*)$",
				{
					"line": 1,
					"column": 2,
					"message": [4, 3]
				}
			]
		},
		"shellcheck": {
			"command": "shellcheck",
			"debounce": 100,
			"args": ["--format", "json", "-"],
			"sourceName": "shellcheck",
			"parseJson": {
				"line": "line",
				"column": "column",
				"endLine": "endLine",
				"endColumn": "endColumn",
				"message": "${message} [${code}]",
				"security": "level"
			},
			"securities": {
				"error": "error",
				"warning": "warning",
				"info": "info",
				"style": "hint"
			}
		}
	},
	"languageserver": {
		"clangd": {
			"command": "clangd",
			"filetypes": ["c", "cpp"],
			"rootPatterns": ["compile_commands.json", ".git"],
			"args": [
				"--compile-commands-dir=build",
				"--compile_args_from=filesystem",
				"--all-scopes-completion",
				"--background-index",
				"--clang-tidy",
				"--cross-file-rename",
				"--completion-parse=always",
				"--completion-style=detailed",
				"--function-arg-placeholders",
				"--header-insertion-decorators",
				"--query-driver=/usr/bin/**/clang-*",
				"--header-insertion=never",
				"--limit-results=0",
				"-j=6",
				"--pch-storage=memory"
			]
		}
	}
}

